<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Couphone</title>
	<link rel='stylesheet' href='/css/style.css' />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
	<script src="/js/jquery-1.11.2.min.js"></script>
	<script>
        $(function() {
            $('#btnTaxi').click(function() {
								if ($('#wechatId').val() == "") {
                                    $('#wechatId').text('Wechat ID를 꼭 입력하세요!');
									$('#wechatId').focus();
									return;
								}else if ($('#endNameCn').val() == "") {
                                    $('#endNameCn').text('도착지 이름(중국어)를 꼭 입력하세요!');
                                    $('#endNameCn').focus();
									return;
								}else if ($('#endNameKr').val() == "") {
									$('#endNameKr').text('도착지 이름(한국어)를 꼭 입력하세요!');
									$('#endNameKr').focus();
									return;
								}else if ($('#endAddrCn').val() == "") {
                                    $('#endNameCn').text('도착지 주소(중국어)를 꼭 입력하세요!');
                                    $('#endAddrCn').focus();
                                    return;
                                }else if ($('#endAddrKr').val() == "") {
                                    $('#endNameCn').text('도착지 주소(한국어)를 꼭 입력하세요!');
                                    $('#endAddrKr').focus();
                                    return;
                                }else if ($('#translationAddrCn').val() == "") {
									$('#alert').text('택시기사용 중국어를 꼭 입력하세요!');
									$('#translationAddrCn').focus();
									return;
								}

								$('#sendform').submit(); // 전송
                });

            $('#Taxi_send').on(
                'click',
                function() {

                    $('#sendform3').submit(); // 전송
                });

            $('#StartMessage_send').on(
                'click',
                function() {
                    if ($('#StartMessage').val() == "") {
                        alert('보내실문자를 입력하세요');
                        $('#StartMessage').focus();
                        return;
                    }
                    $('#sendform2').submit(); // 전송
                });

            $('#Find_Message_Btn').on(
                'click',
                function() {
                    $('#StartMessage').val("지금 요청하신 자료를 찾고 있습니다. 잠시만 기다려 주십시요.");
                    return;
                });
            $('#Delay_Message_Btn').on(
                'click',
                function() {
                    $('#StartMessage').val("요청하신 자료 찾기가 쉽지 않아 시간이 조금 더 걸릴 것 같습니다.");
                    return;
                });
            $('#Bye_Message_Btn').on(
                'click',
                function() {
                    $('#StartMessage').val("이용해주셔서 감사합니다. 즐거운 여행 되십시요.");
                    return;
                });

        });
	</script>
</head>
<body>
<div class="container">
	<div class="row">

		<h1>Wechat Message Tool</h1>
		<form action="/wechat/agentWechat" method="post" id="sendform" class="form-inline">
			<input type="hidden" id="message" name="message" value="1">
			<table class="table table-condensed">
				<tr>
					<th width="100"><label for="wechatId">Wechat ID</label></th>
					<td><input type="text" name="wechatId" id="wechatId" size="50" maxlength="12" class="form-control" value="test02" /></td>
				</tr>
				<tr>
					<td colspan="3">
						<label for="endNameCn">도착지 이름 (중국어)</label>
						<input type="text" name="endNameCn" id="endNameCn" size="25"maxlength="50" class="form-control"  value="黄浦区福州路70号"/>
						<label for="endNameKr" >도착지 이름 (한국어)</label>
						<input type="text" name="endNameKr" id="endNameKr" size="25"maxlength="50" class="form-control" value="황보구 복주로 70호" />
					</td>
				</tr>
				<tr>
					<td colspan="3">
						<label for="endAddrCn">도착지 주소 (중국어)</label>
						<input type="text" name="endAddrCn" id="endAddrCn" size="25"maxlength="50" class="form-control"  value="黄浦区福州路70号"/>
						<label for="endAddrKr" >도착지 주소 (한국어)</label>
						<input type="text" name="endAddrKr" id="endAddrKr" size="25"maxlength="50" class="form-control" value="황보구 복주로 70호" />
					</td>
				</tr>
				<tr>
					<td colspan="3"><label for="translationAddrCn">택시기사용 &nbsp;&nbsp;중국어&nbsp;</label>
					<input type="text" name="translationAddrCn" id="translationAddrCn" size="100" maxlength="100" class="form-control" value="黄浦区福州路70号" /></td>
				</tr>
				<tr><td colspan="3" id ='alert' style="color: red"></td></tr>
				<tr>
					<td colspan="2"><input type="button" id="btnTaxi" value="Taxi 지도 전송" style="height: 35px" class="btn btn-primary" />  </td>
				</tr>
			</table>
		</form>


		<form action="/wechat/agentWechat" method="post" id="sendform2"
			  class="form-inline">
			<input type="hidden" id="message" name="message" value="2">
			<table class="table table-condensed">
				<tr>
					<th width="100"><label for="wechatId">Wechat ID</label></th>
					<td><input type="text" name="wechatId" id="wechatId" size="50"
							   maxlength="12" class="form-control" value="mjmts" /></td>
				</tr>
				<tr>
					<th width="100"><label for="StartMessage">Message</label></th>
					<td><input type="text" name="StartMessage" id="StartMessage" size="100"
							   maxlength="100" class="form-control"  /></td>
				</tr>

				<tr>
					<td colspan="2"><input type="button" id="StartMessage_send" value="문자전송" style="height: 35px"
										   class="btn btn-primary"/>
						<!--</td>-->
						<!--<td colspan="2">-->
						<input type="button" id="Find_Message_Btn" value="찾는중" style="height: 35px"
							   class="btn btn-primary" />
						<!--</td>-->
						<!--<td colspan="2">-->
						<input type="button" id="Delay_Message_Btn" value="오래걸림" style="height: 35px"
							   class="btn btn-primary"/>
						<!--</td>-->
						<!--<td colspan="2">-->
						<input type="button" id="Bye_Message_Btn" value="종료인사" style="height: 35px"
							   class="btn btn-primary"/> </td>
				</tr>
			</table>
		</form>

