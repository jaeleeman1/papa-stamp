    <script type ="text/javascript">
        $(function() {
//            console.log('url' + $("#url").val());
            $.ajax({
                url: $("#url").val()+'/shopping/shoppingBuySum?wechat_id='+ $("#wechat_id").val(),
                type: 'GET',
                success: function (data) {
                    var replaceCnt = '<div class="view_product" id="btn_change"><span class="ic_buy"><img src="images/btn_ic_buy@3x.png"></span>상품' + data.buyCnt + '개</div>';
                    $("#btn_count").replaceWith(replaceCnt);

                    var replaceSumPrice = '<a href="#"><div class="price_buy" id="btn_confirm"><span class="ic_price">￥' + data.buySumPrice + ' </span>구매</div></a>';
                    $("#btn_sum_price").replaceWith(replaceSumPrice);
                },
                error: function (request, status, error) {
                    console.log("code:" + request.status + "\n" + "message:" + request.responseText + "\n" + "error:" + error);
                    console.log('Error occured');
                }
            })

            $("#btn_confirm").click(
                function() {
                    var openId = $("#open_Id").val();
                    var length = $("#length").val();
                    var Prdct_Nm = [];
                    var Prdct_Cnt = [];
                    var Price = [];

                    for(var i = 0; i< length; i++) {
                        if(i != length-1) {
                            Prdct_Nm += JSON.stringify($("#prdct_nm_"+i).val()) + ", ";
                            Prdct_Cnt += JSON.stringify($("#prdct_cnt_"+i).val()) + ", ";
                            Price += JSON.stringify($("#price_"+i).val()) + ", ";
                        }else {
                            Prdct_Nm += JSON.stringify($("#prdct_nm_"+i).val());
                            Prdct_Cnt += JSON.stringify($("#prdct_cnt_"+i).val());
                            Price += JSON.stringify($("#price_"+i).val());
                        }
                    }

                    var dataStr = '{"User_Open_Id":"' + openId +'", ' +
                        '"Prdct_Nm":[' + Prdct_Nm +'], ' +
                        '"Prdct_Cnt":[' + Prdct_Cnt +'], ' +
                        '"Price":[' + Price +']' +
                        '}';

                    if (confirm("선택하신 상품을 모두 구매 하시겠습니까?") == true) {
                        $.ajax({
                            url: $("#url").val()+'/wechat/shoppingResultSend',
                            type: 'POST',
                            traditional:true,
                            data: JSON.parse(dataStr),
                            success: function(data) {
                                var dataString = {'wechat_id': wechatId};
                                $.ajax({
                                    url: $("#url").val()+'/shopping/shoppingDeleteAll',
                                    type: 'POST',
                                    dataType: 'json',
                                    data: dataString,
                                    success: function(data) {
                                        console.log("*** delete shoppingBuyList *** - wechatId : " + wechatId);
                                    },
                                    error: function(request, status, error) {
                                        console.log("code:"+request.status+"\n"+"message:"+request.responseText+"\n"+"error:"+error);
                                        console.log('Error occured');
                                    }
                                })
                                console.log("*** success shoppingBuyList *** - wechatId : " + wechatId);
                                window.location.href = $("#url").val()+'/shopping';
                            },
                            error: function(request, status, error) {
                                console.log("code:"+request.status+"\n"+"message:"+request.responseText+"\n"+"error:"+error);
                                console.log('Error occured');
                            }
                        })
                    } else {
                        return;
                    }
                }
            );
        });
    </script>
</head>
<form action="/" method="get" style="display:none" name="list_setting" id="list_setting">
    <input type="hidden" name="wechat_id" id="wechat_id" value="<%= wechatId %>"/>
    <input type="hidden" name="url" id="url" value="<%= url %>"/>
</form>

<body>
<div id="container">
    <a href="javascript:history.back()"><p class="back_arrow"><img src="images/btn_back_w@3x.png"></p></a>
    <div id="header">
        <span class="part"></span><span class="head_ti">쇼핑</span>
    </div>
    <!-- Shopping list -->
    <div id="shopping_buy_wrap">
        <% for(var i = 0; i < data.length; i++) { %>
            <div class="buy_wrap">
                <img src="/images/photo_buy_0<%=i+1%>.png" class="photo_buy" onclick="location.href='/shopping/shoppingDetail?wechat_id=<%= wechatId %>&prdct_id=<%= data[i].PRDCT_ID%>'">
                <a href = "/shopping/shoppingDetail?wechat_id=jaeleeman1&prdct_id=<%= data[i].PRDCT_ID%>" />
                    <ul>
                        <li class="name"><%= data[i].PRDCT_NM %><li>
                        <li class="price">￥<%= data[i].PRICE %><li>
                    </ul>
                    <a href="#"><img src="/images/ic_card_add@3x.png" class="ic_card" onclick="location.href='/shopping/shoppingSetting?wechat_id=<%= wechatId %>&prdct_id=<%= data[i].PRDCT_ID%>&prdct_cnt=<%= data[i].SHOPPING_CNT %>'"></a>
                    <div class="clear_both"></div>
            </div>
        <% } %>
    </div>
    <!-- 하단버튼 -->
    <div id="btn_buy">
        <div class="view_product" id="btn_count"><span class="ic_buy"><img src="images/btn_ic_buy@3x.png"></span>상품 개</div>
        <a href="#"><div class="price_buy" id="btn_confirm"><span class="ic_price">￥ </span>구매</div></a>
    </div>
</div>
</body>

