<script type ="text/javascript">

    $(function(){
        var map = new BMap.Map("taxi_find_local_map");

        var navigationControl = new BMap.NavigationControl({
            anchor: BMAP_ANCHOR_BOTTOM_LEFT,
            type: BMAP_NAVIGATION_CONTROL_LARGE,
            enableGeolocation: true
        });

        var geolocationControl = new BMap.GeolocationControl({
            anchor: BMAP_ANCHOR_BOTTOM_RIGHT,
            type: BMAP_NAVIGATION_CONTROL_LARGE,
            enableGeolocation: true
        })

        map.addControl(navigationControl);
        map.addControl(geolocationControl);

        getPosition();

        function getPosition() {

            var longitude = 31.232280291456389;
            var latitude = 121.49815490071883;

            var mPoint = new BMap.Point(longitude, latitude);
            map.enableScrollWheelZoom();
            map.centerAndZoom (mPoint, 20);

            $('#lng').val(longitude);
            $('#lat').val(latitude);

            var mkr = new BMap.Marker(mPoint);
            map.addOverlay(mkr);

            $.ajax({
                url: 'http://nbnl.couphone.cn/food/currentLocation',
                type: 'POST',
                data: {lng : longitude,
                    lat : latitude},
                success: function (data) {

                    $('#address').text(data.address);

                    $('#btnSend').click(function () {
                        var data = {
                            addr : $('#address').text(),
                            lat : $('#lat').val(),
                            lng : $('#lng').val(),
                            nickName : $('#nickName').val()
                        }
                        $.ajax({
                            url: 'http://nbnl.couphone.cn/wechat/taxiDepartSend',
                            type: 'POST',
                            data: data,
                            success: function (data) {

                                var taxiMsg = "택시 안내 요청 현위치 : " + $('#address').text();

                                var content = {
                                    fromNickName : '',
                                    toNickName : data.nickName,
                                    contentType : 'text',
                                    contents : taxiMsg,
                                    type : 'saveMsg'
                                };
                            },
                            error: function (request, status, error) {
                                console.log("code:" + request.status + "\n" + "message:" + request.responseText + "\n" + "error:" + error);
                                console.log('Error occured');
                            }
                        });
                    });
                },
                error: function (request, status, error) {
                    console.log("code:" + request.status + "\n" + "message:" + request.responseText + "\n" + "error:" + error);
                    console.log('Error occured');
                }
            })
        }
    });
